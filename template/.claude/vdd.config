#!/bin/bash
# VDD Framework Configuration
# このファイルは hooks やスキルから source される設定ファイルです。
# プロジェクトに合わせて値を変更してください。

# --- プロジェクト基本情報 ---
PROJECT_NAME="{{PROJECT_NAME}}"

# --- コマンド設定 ---
# プロジェクトのテスト・チェック・ビルドコマンドを指定
TEST_COMMAND="{{TEST_COMMAND}}"          # e.g., pnpm test:run, pytest, cargo test
CHECK_COMMAND="{{CHECK_COMMAND}}"        # e.g., pnpm check, make check
BUILD_COMMAND="{{BUILD_COMMAND}}"        # e.g., pnpm build, cargo build --release
INSTALL_COMMAND="{{INSTALL_COMMAND}}"    # e.g., pnpm install, pip install -r requirements.txt

# --- ブランチ設定 ---
MAIN_BRANCH="main"
INTEGRATION_BRANCH="develop"
RELEASE_PREFIX="release/"

# --- テストファイル設定 ---
TEST_FILE_PATTERN="*.test.{ts,tsx}"      # e.g., *.test.ts, *_test.py, *_test.go
